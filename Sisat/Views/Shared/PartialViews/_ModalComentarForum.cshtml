<div class="modal fade" id="projectComentarForum" tabindex="-1" role="dialog" aria-labelledby="projectModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="projectModalLabel">Comentar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">
                <!-- Formulário para cadastro/alteração -->
                <form asp-controller="Chat" asp-action="EnviarMensagem" method="post" enctype="multipart/form-data">
                    <label>Descreva seu Comentário: </label>
                    <div class="form-group">
                        <label class="control-label"></label>
                        <textarea type="text" name="resposta" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="modal-footer">
                        <div class="form-group">
                            <input type="submit" value="Enviar" class="btn btn-secondary" />
                        </div>
                        <button type="button" class="btn btn-light" data-dismiss="modal">Fechar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
